<% include ../partials/boilerplate.ejs %>
<br>
<h1 class="display-4"> Update or Delete post </h1>
<br>
<form method="POST" action="/posts/<%=data.id%>?_method=PUT">
  <div class="form-group">
	<input name="id" type="hidden" value="<%=data.id%>">
	<select name="cat_id">  
  		<% cat.forEach(category => { %>
 	 		<option value="<%=category.id %>" selected> <%=category.catname %> </option> 
 	 	<% }) %>
 	 </select>
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">Title</label>
	  <input name="title" type="text" value="<%=data.title%>" placeholder="title" />
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Price</label>
    <input name="price" type="number" value="<%=data.price%>" placeholder="price" />
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Description</label>
    <textarea type="text" name="content" class="form-control" rows="3"><%=data.content%></textarea>
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Image URL</label>
    <input name="imgurl" type="text" value="<%=data.imgurl%>" placeholder="image url" />
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">location</label>
    <input name="location" type="number" value="<%=data.location%>" />
  </div>
  	<input class="btn btn-primary" type="submit" value="Submit" />
</form>
<br>
<form method="POST" action="/posts/<%=data.id%>?_method=delete">
	<button class="btn btn-secondary">DELETE</button>
</form>
