<% include ../partials/boilerplate.ejs %>

<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
<!-- this script is for my modal contact form -->

<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4"><%= data.title %></h1>
	<h3> description: </h3> <p><%= data.content %></p>
	<h3> price: </h3><p style="color: #ff0000">$<%= data.price %></p>
	<h4> location: </h4><p><%=data.location%></p>
	<img src="https://maps.googleapis.com/maps/api/staticmap?center=<%=data.location%>&zoom=13&size=600x300&maptype=roadmap
&markers=color:blue%7Clabel:S%7C40.702147,-74.015794&markers=color:green%7Clabel:G%7C40.711614,-74.012318
&markers=color:red%7Clabel:C%7C40.718217,-73.998284
&key=AIzaSyCgPb79qOvgUSyoGsPIhQSDnfNl5_DFasM" width="450">
	<br>
	<br>
	<h4> Pic: </h4>
	<img src="<%=data.imgurl%>" class="img-fluid" alt="Responsive image">
	<br>
	<br>

	<button type="button" class="btn btn-primary" id="contact" data-toggle="modal" data-target="#exampleModal">Contact</button>

	<!-- Modal -->
	<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
	  <div class="modal-dialog" role="document">
	    <div class="modal-content">
	      <div class="modal-header">
	        <h5 class="modal-title" id="exampleModalLabel">Contact <%=email.email%></h5>
	        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
	          <span aria-hidden="true">&times;</span>
	        </button>
	      </div>
	      <div class="modal-body">
	        <textarea type="text" name="content" class="form-control" rows="3"></textarea>
	      </div>
	      <div class="modal-footer">
	        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
	        <button type="button" class="btn btn-primary">SEND</button>
	      </div>
	    </div>
	  </div>
	</div>

	<div>
		<%if (user.id === data.user_id) { %>
		<a href="/posts/<%=data.id%>/edit"><button type="button" class="btn btn-primary">edit</button></a>
		<script> $('#contact').remove() </script>
		<% } %>
	</div>

  </div>
</div>

<br>
<br>